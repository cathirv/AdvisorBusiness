<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme.Material" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <style name="AppTheme.Material.FullScreen" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="AppTheme.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.Dialog.Positive.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.Dialog.Negative.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppTheme.Dialog.Positive.Button</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AppTheme.Dialog.Body</item>
    </style>

    <style name="AppTheme.Dialog.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="AppTheme.Dialog.Negative.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="AppTheme.Dialog.Positive.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

</resources>
